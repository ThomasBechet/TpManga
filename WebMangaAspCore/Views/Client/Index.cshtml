@model WebmangaAspCore.Models.Metier.Manga
@using WebmangaAspCore.Models.Metier;
@{
    ViewBag.Title = "Ajouter un manga";
    Layout = "~/Views/Shared/_LayoutManga.cshtml";
}
<h1>Ajouter un manga</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Ajouter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Dessinateur</label>
                @Html.DropDownList("Id_dessinateur", Dessinateur.GetList(), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">Scenariste</label>
                @Html.DropDownList("Id_scenariste", Scenariste.GetList(), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Prix" class="control-label"></label>
                <input asp-for="Prix" class="form-control" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titre" class="control-label"></label>
                <input asp-for="Titre" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Couverture" class="control-label"></label>
                @Html.DropDownList("Couverture", WebmangaAspCore.Models.Metier.Manga.GetCouvertures(), null, new { @class = "form-control" })
                <span asp-validation-for="Couverture" class="text-danger"></span>
                <p>Pour ajouter une nouvelle image de couverture, utiliser le formulaire ci-dessous.</p>
            </div>
            <div class="form-group">
                <label class="control-label">Genre</label>
                @Html.DropDownList("Id_genre", Genre.GetList(), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="DateParution" class="control-label"></label>
                <input type="date" asp-for="DateParution" class="form-control" />
                <span asp-validation-for="DateParution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

        <hr />
        <form method="post" enctype="multipart/form-data" asp-controller="Client" asp-action="UploadImage">
            <p>Pour ajouter une nouvelle image de couverture, utiliser ce formulaire:</p>
            <div class="form-group">
                <div class="col-md-6">
                    <input type="file" name="files" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Manga" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}